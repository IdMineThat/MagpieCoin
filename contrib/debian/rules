#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_bitcoin
#build/magpiecoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_bitcoin)

DEB_INSTALL_EXAMPLES_magpiecoind += debian/examples/*
DEB_INSTALL_MANPAGES_magpiecoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix magpiecoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f magpiecoin-y-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake magpiecoin-y-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_bitcoin
	src/test_bitcoin

# Ensure wrapper is set executable
binary-post-install/magpiecoind:
	chmod +x $(cdbs_curdestdir)usr/bin/magpiecoind
binary-post-install/magpiecoin-y-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/magpiecoin-y-qt
